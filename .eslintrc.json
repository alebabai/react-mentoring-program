{
    "env": {
        "browser": true,
        "es6": true,
        "jest": true
    },
    "extends": [
        "airbnb",
        "airbnb/hooks"
    ],
    "globals": {
        "process": "readonly"
    },
    "rules": {
        "semi": "off",
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "react/jsx-indent": [
            "error",
            4
        ],
        "camelcase": "off",
        "import/no-unresolved": "off",
        "import/no-named-as-default": "off",
        "react/jsx-filename-extension": "off",
        "react/jsx-props-no-spreading": "off"
    }
}
